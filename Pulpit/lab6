#!/bin/bash

select x in "dodawanie" "odejmowanie" "mnozenie" "dzielenie" "wyjscie"
do

case $x in
"dodawanie")
 echo $(($1+$2));;
"odejmowanie")
 echo $(($1-$2));;
"mnozenie")
 echo $(($1*$2));;
"dzielenie") 
 echo $(($1/$2));;	
"wyjscie") 
exit 0;;
 esac

done
exit 0
