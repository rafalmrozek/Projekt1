#!/bin/bash
read liczba if [[ $liczba -gt 0 ]] then
	echo "liczba jest dodatnia" elif [[ $liczba -lt 0 ]] then
	echo "liczba jest ujemna" else [[ $liczba -eq 0 ]]
	echo "Liczba jest rowna 0" fi exit 0; 
