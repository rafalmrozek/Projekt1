#!/bin/bash
case $1 in 1)
 echo "styczen"
 ;; 2) echo "luty"
 ;; 3) echo "marzec"
 ;; 4) echo "kwiecien"
 ;; 5) echo "maj"
 ;; 6) echo "czerwiec"
 ;; 7) echo "lipiec"
 ;; 8) echo "sierpien"
 ;; 9) echo "wrzesien"
 ;; 10) echo "pazdziernik"
 ;; 11) echo "listopad"
 ;; 12) echo "grudzien"
 ;; *)
  esac
exit 0;
