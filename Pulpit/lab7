#!/bin/bash
read napis function wyswietl_pierwsza_litere {
	echo "pierwsza litera to" ${napis:0:1} #wyswietl wszystkie 
liczby pomiedzy 0 i 1
}
function wyswietl_ostatnia_litere {
	echo "ostatnia litera to" ${napis:${#napis}-1}
}
function wyswietl_od_pierwszej_do_srodkowej {
	echo "wyswietl_od_pierwszej_do_srodkowej" ${napis:0:${#napis}/2}
}
function wyswietl_od_srodkowej_do_ostatniej {
	echo "wyswietl_od_srodkowej_do_ostatniej" 
${napis:${#napis}/2:${#napis}}
}
wyswietl_pierwsza_litere wyswietl_ostatnia_litere 
wyswietl_od_pierwszej_do_srodkowej wyswietl_od_srodkowej_do_ostatniej
exit 0;
zad5
#!/bin/bash

read a
read b
read c
function czydodatnie
{
if [[ $1 -lt 0 || $2 -lt 0 || $3 -lt 0 ]]
then 
exit 0 
fi
}
function trojkat
{
czydodatnie $1 $2 $3
let max=$1
if [[ $max -lt $2 ]]
then
max=$2
fi
if [[ $max -lt $3 ]]
then
max=$3
fi
if [[ $max -eq $1 ]]
then
let s=$2+$3
if [[ $max -gt $s ]]
then	
return 0	
else
return 1	
fi
elif [[ $max -eq $2 ]]
then
let s=$1+$3
if [[ $max -gt $s ]]
then	
return 0	
else	
return 1
fi
elif [[ $max -eq $3 ]]
then
let s=$1+$2
if [[ $max -gt $s ]]
then		
return 0
else
return 1
fi
fi
}
trojkat a b c echo $?
