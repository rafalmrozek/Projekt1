zad1 
#!/bin/bash
tablica=($*) echo ${tablica[*]}
#1 wersja fora
function suma1 {
	local suma=0
	for ((i = 0; i<${#tablica[*]}; i=i+1 ))
	do
	 suma=$[suma+${tablica[i]}] #suma = suma+element tablicy
	done
	echo $suma
	
}

function suma2 {
	local suma=0
	for i in ${tablica[*]}
	do
	 suma=$[suma+$i] #suma = suma+element tablicy
	done
	echo $suma
	
}
suma1 suma2
 exit 0; 
