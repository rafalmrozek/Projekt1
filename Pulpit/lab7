#!/bin/bash
tablica=($*) echo ${tablica[*]} function najwieksza {
	local max=${tablica[0]}
	for ((i = 0; i<${#tablica[*]}; i=i+1 ))
	do
		if [[ ${tablica[i]} -gt $max ]]
 		then
		 max=${tablica[i]}
		fi
	done
	echo "najwieksza wartosc to" $max
	
}
function najmniejsza {
	local min=${tablica[0]}
	for ((i = 0; i<${#tablica[*]}; i=i+1 ))
	do
		if [[ ${tablica[i]} -lt $min ]]
 		then
		 min=${tablica[i]}
		fi
	done
	echo "najniejsza wartosc to" $min
	
}
najwieksza najmniejsza
 exit 0; 
