#!/bin/bash
tablica=($*) echo ${tablica[*]} function suma1 {
	local suma=0
	for ((i = ${#tablica[*]}; i>=0; i=i-1 ))
	do
	 echo ${tablica[i]}
	done
	
	
}
suma1 exit 0;
